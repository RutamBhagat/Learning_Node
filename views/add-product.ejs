<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <%- include('layout/header.ejs') %>
  </head>

  <body>
    <header><%- include('layout/navbar.ejs') %></header>
    <main>
      <form action="/admin/add-product" method="POST" class="max-w-md px-4 mx-auto mt-12">
        <div>
          <label for="title" class="block py-3 text-gray-500"> Your Title </label>
          <div class="flex items-center gap-2">
            <div class="flex items-center border rounded-md h-10">
              <input
                type="text"
                placeholder="Hello World"
                name="title"
                class="w-full p-1 ml-3 text-gray-500 outline-none border-0 bg-transparent"
              />
            </div>
            <button
              type="button"
              class="text-white mt-2 bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
            >
              Add Product
            </button>
          </div>
        </div>
      </form>
    </main>
  </body>
</html>
